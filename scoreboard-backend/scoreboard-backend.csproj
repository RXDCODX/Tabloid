<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>scoreboard_backend</RootNamespace>
    <JsonSerializerIsReflectionEnabledByDefault>true</JsonSerializerIsReflectionEnabledByDefault>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.7" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR" Version="1.2.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="9.0.3" />
  </ItemGroup>

  <Target Name="BuildFrontendAndCopyToWwwroot" AfterTargets="Build">
    <!-- Билдим фронтенд -->
    <Exec WorkingDirectory="..\scoreboard-app" Command="npm install" />
    <Exec WorkingDirectory="..\scoreboard-app" Command="npm run build" />
    <!-- Очищаем wwwroot (кроме node_modules, если есть) -->
    <RemoveDir Directories="wwwroot" />
    <MakeDir Directories="wwwroot" />
    <!-- Копируем всё из dist во wwwroot -->
    <Copy SourceFiles="@(FrontendDistFiles)" DestinationFolder="wwwroot\%(RecursiveDir)" SkipUnchangedFiles="true" />
  </Target>
  <ItemGroup>
    <FrontendDistFiles Include="..\scoreboard-app\dist\**\*.*" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Serialization\" />
  </ItemGroup>

</Project>
